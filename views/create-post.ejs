<% layout('layout') %>
<% block('head').append(
	'<link rel="stylesheet" href="/assets/create-post.css"> \
  <meta name="robots" content="noindex,nofollow">'
) %>

<form method="post" action="/cmd.sync/create">
	<div class="input-wrapper">
		<h1>Key: </h1>&nbsp;&nbsp;<input title="Key" type="text" name="syncKey">
	</div>

	<div class="input-wrapper">
		<h1>Title: </h1>&nbsp;&nbsp;<input title="Title" type="text" name="title">
	</div>

	<div class="input-wrapper">
		<h1>Body: </h1>
		<textarea title="Body" rows="10" name="body"></textarea>
	</div>

	<div class="input-wrapper">
		<h1>Date: </h1>&nbsp;&nbsp;<input title="Date" type="text" name="datetime">
	</div>

	<input class="submit" type="submit">
</form>
